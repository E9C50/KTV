<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <!-- 原唱 -->

        <ImageView
            android:id="@+id/btnSong"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center"
            android:onClick="NoSinger"
            android:src="@drawable/nosinger" />

        <!-- 切歌 -->

        <ImageView
            android:id="@+id/btnCutSong"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center"
            android:onClick="CutSong"
            android:src="@drawable/cutsong" />


        <!-- 暂停 -->
        
        <ImageView
            android:id="@+id/btnPause"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center"
            android:onClick="PauseClick"
            android:src="@drawable/play" />

        <!-- 重唱 -->
        
        <ImageView
            android:id="@+id/btnLastSong"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center"
            android:onClick="LastSong"
            android:src="@drawable/resong" />
        
        <!-- 服务 -->
        
        <ImageView
            android:id="@+id/btnServer"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_gravity="center"
            android:onClick="Server"
            android:src="@drawable/server" />

    </LinearLayout>

</LinearLayout>